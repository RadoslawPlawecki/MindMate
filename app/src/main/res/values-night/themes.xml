<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="buttonStyle">@style/defaultButton</item>
        <item name="android:editTextStyle">@style/defaultEditText</item>
        <item name="android:textViewStyle">@style/defaultTextView</item>
    </style>

    <style name="defaultButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/jaldi_bold</item>
    </style>

    <style name="defaultEditText" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/bg_rounded_corner_100</item>
        <item name="fontFamily">@font/jaldi_bold</item>
        <item name="android:textColorHint">@color/editTextColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="defaultTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textViewColor</item>
        <item name="android:fontFamily">@font/jaldi_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="fontFamily">@font/jaldi_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="Theme.MindMate" parent="android:Theme.Material.Dialog.NoActionBar" />
</resources>