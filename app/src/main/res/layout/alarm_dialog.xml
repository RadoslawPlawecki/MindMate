<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_box_alarm"
        android:clipToPadding="true"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/alarm_title_text_view"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:fontFamily="@font/jaldi_regular"
            android:gravity="center"
            android:lineSpacingMultiplier="0.9"
            android:text="@string/alert_your_caregiver"
            android:textAlignment="center"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/phone_number_edit_text"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:ems="10"
            android:fontFamily="@font/jaldi_bold"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:textAlignment="center"
            android:textColor="@color/textViewColor"
            android:textColorHint="@color/editTextColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/call_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:backgroundTint="@color/snackBarFailure"
            android:gravity="center"
            android:text="CALL"
            android:textSize="32sp" />
    </LinearLayout>
</LinearLayout>