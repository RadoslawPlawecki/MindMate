<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dialog_box_alarm"
        android:clipToPadding="true"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="15dp">

        <TextView
            android:id="@+id/alarm_title_text_view"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:fontFamily="@font/jaldi_bold"
            android:gravity="center"
            android:lineSpacingMultiplier="0.9"
            android:text="@string/alert_your_caregiver"
            android:textAlignment="center"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_sms_loc"
                android:layout_width="223dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_rounded_corner_10_red"
                android:backgroundTint="@color/sendLocationCaregiver"
                android:clickable="true"
                android:elevation="10dp"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ic_sms"
                    android:layout_width="59dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/text_sms"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/jaldi_bold"
                    android:lineSpacingMultiplier="0.7"
                    android:text="SEND SMS WITH \n MY LOCATION"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_call_caregiver"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:background="@drawable/bg_rounded_corner_10_red"
            android:backgroundTint="@color/callCaregiver"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_call"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_phone" />

            <TextView
                android:id="@+id/text_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/jaldi_bold"
                android:text="CALL YOUR CAREGIVER"
                android:lineSpacingMultiplier="0.7"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>