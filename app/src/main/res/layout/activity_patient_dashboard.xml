<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".DashboardActivity">

    <include
        layout="@layout/common_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/grey_rect"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/bg_white_rectangle" >

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaldi_bold"
            android:text="@string/hello_xyz"
            android:textSize="24sp"
            android:layout_marginStart="30dp" />

        <TextView
            android:id="@+id/days_of_use"
            android:layout_width="249dp"
            android:layout_height="62dp"
            android:layout_marginStart="30dp"
            android:lineSpacingMultiplier="0.8"
            android:text="@string/you_ve_been_using_mindmate_for_x_days_in_a_row"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/white_rect"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_white_rectangle_with_stroke" >

        <TextView
            android:id="@+id/txt_your_caregiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaldi_bold"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="YOUR CAREGIVER"
            android:letterSpacing="0.08"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:elevation="10dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/text_caregiver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caregiver's name"
                android:textSize="18dp"
                android:fontFamily="@font/jaldi_regular"
                android:layout_marginStart="15dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/ic_caregiver_info"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_circle_info" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Main Message Icon -->
                <ImageView
                    android:id="@+id/ic_message"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_chat" />

                <ImageView
                    android:id="@+id/unread_message"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/bg_unread_message_sign"
                    android:visibility="visible" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/button_medical_survey"
                android:layout_width="140dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_dashboard_button"
                android:backgroundTint="@color/medicalSurvey"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_medical_survey"
                    android:layout_width="99dp"
                    android:layout_height="55dp"
                    android:text="@string/medical_survey"
                    android:lineSpacingMultiplier="0.6"
                    android:textSize="23sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/jaldi_bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp" />

                <ImageView
                    android:id="@+id/image_medical_survey"
                    android:layout_width="57dp"
                    android:layout_height="66dp"
                    app:srcCompat="@drawable/ic_notes_medical_solid" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_cognitive_games"
                android:layout_width="140dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_dashboard_button"
                android:backgroundTint="@color/cognitiveGames"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_cognitive_games"
                    android:layout_width="99dp"
                    android:layout_height="55dp"
                    android:text="@string/cognitive_games"
                    android:lineSpacingMultiplier="0.6"
                    android:textSize="23sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/jaldi_bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp" />

                <ImageView
                    android:id="@+id/image_cognitive_games"
                    android:layout_width="57dp"
                    android:layout_height="66dp"
                    app:srcCompat="@drawable/ic_gamepad_solid" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/button_daily_checklist"
                android:layout_width="140dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_dashboard_button"
                android:backgroundTint="@color/dailyChecklist"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_daily_checklist"
                    android:layout_width="99dp"
                    android:layout_height="55dp"
                    android:text="@string/daily_checklist"
                    android:lineSpacingMultiplier="0.6"
                    android:textSize="23sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/jaldi_bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp" />

                <ImageView
                    android:id="@+id/image_daily_checklist"
                    android:layout_width="57dp"
                    android:layout_height="66dp"
                    app:srcCompat="@drawable/ic_clipboard_list_solid" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_your_pharmacy"
                android:layout_width="140dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_dashboard_button"
                android:backgroundTint="@color/yourPharmacy"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_your_pharmacy"
                    android:layout_width="99dp"
                    android:layout_height="55dp"
                    android:text="@string/your_pharmacy"
                    android:lineSpacingMultiplier="0.6"
                    android:textSize="23sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/jaldi_bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp" />

                <ImageView
                    android:id="@+id/image_your_pharmacy"
                    android:layout_width="57dp"
                    android:layout_height="66dp"
                    app:srcCompat="@drawable/ic_tablets_solid" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>