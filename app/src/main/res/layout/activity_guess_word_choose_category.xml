<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".patient.CaregiverInfoActivity">

    <include
        layout="@layout/common_top_bar_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_your_caregiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jaldi_bold"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Choose a category!"
        android:textSize="32sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/btn_fruit"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:elevation="10dp"
                    android:background="@drawable/bg_guess_word_category"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ic_fruit"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_fruit" />

                    <TextView
                        android:id="@+id/text_fruit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fruit"
                        android:lineSpacingMultiplier="0.6"
                        android:textSize="23sp"
                        android:fontFamily="@font/jaldi_bold"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_vegetable"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:elevation="10dp"
                    android:background="@drawable/bg_guess_word_category"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ic_vegetable"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_vegetable" />

                    <TextView
                        android:id="@+id/text_vegetable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vegetable"
                        android:lineSpacingMultiplier="0.6"
                        android:textSize="23sp"
                        android:fontFamily="@font/jaldi_bold"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/btn_country"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:elevation="10dp"
                    android:background="@drawable/bg_guess_word_category"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ic_country"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_country" />

                    <TextView
                        android:id="@+id/text_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:lineSpacingMultiplier="0.6"
                        android:textSize="23sp"
                        android:fontFamily="@font/jaldi_bold"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_furniture"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:elevation="10dp"
                    android:background="@drawable/bg_guess_word_category"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ic_furniture"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_furniture" />

                    <TextView
                        android:id="@+id/text_furniture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Furniture"
                        android:lineSpacingMultiplier="0.6"
                        android:textSize="23sp"
                        android:fontFamily="@font/jaldi_bold"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/btn_animal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:elevation="10dp"
                    android:background="@drawable/bg_guess_word_category"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ic_animal"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_animal" />

                    <TextView
                        android:id="@+id/text_animal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Animal"
                        android:lineSpacingMultiplier="0.6"
                        android:textSize="23sp"
                        android:fontFamily="@font/jaldi_bold"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_color"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:elevation="10dp"
                    android:background="@drawable/bg_guess_word_category"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ic_color"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_color" />

                    <TextView
                        android:id="@+id/text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color"
                        android:lineSpacingMultiplier="0.6"
                        android:textSize="23sp"
                        android:fontFamily="@font/jaldi_bold"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/btn_instrument"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:elevation="10dp"
                    android:background="@drawable/bg_guess_word_category"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ic_instrument"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_instrument" />

                    <TextView
                        android:id="@+id/text_instrument"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instrument"
                        android:lineSpacingMultiplier="0.6"
                        android:textSize="23sp"
                        android:fontFamily="@font/jaldi_bold"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_sport"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:elevation="10dp"
                    android:background="@drawable/bg_guess_word_category"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ic_sport"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_sport" />

                    <TextView
                        android:id="@+id/text_sport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sport"
                        android:lineSpacingMultiplier="0.6"
                        android:textSize="23sp"
                        android:fontFamily="@font/jaldi_bold"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>