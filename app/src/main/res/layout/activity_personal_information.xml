<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".registration.PersonalInformationActivity" >

    <ProgressBar
        android:id="@+id/pb_registration"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="297dp"
        android:layout_height="10dp"
        android:progressTint="@color/colorPrimary"
        android:progressBackgroundTint="#8E8E8E"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/text_proceed"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Proceed to the next step!"
        android:textColor="@color/background"
        android:fontFamily="@font/jaldi_bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/text_personal_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Personal information"
        android:fontFamily="@font/jaldi_bold"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/text_personal_info_descr"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam elementum velit augue, vitae malesuada velit facilisis ac."
        android:fontFamily="@font/jaldi_regular"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp" />

    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="294dp"
        android:layout_height="65dp"
        android:background="@drawable/bg_rounded_corner_10"
        android:elevation="10dp"
        android:ems="10"
        android:fontFamily="@font/jaldi_bold"
        android:hint="Your name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/textViewColor"
        android:textColorHint="@color/editTextColor"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:layout_marginTop="35dp"/>

    <EditText
        android:id="@+id/edit_text_dob"
        android:layout_width="294dp"
        android:layout_height="65dp"
        android:background="@drawable/bg_rounded_corner_10"
        android:elevation="10dp"
        android:datePickerMode="calendar"
        android:ems="10"
        android:fontFamily="@font/jaldi_bold"
        android:hint="Your date of birth"
        android:inputType="date"
        android:textAlignment="center"
        android:textColor="@color/textViewColor"
        android:textColorHint="@color/editTextColor"
        android:textSize="20sp"
        android:paddingBottom="8dp"
        android:layout_marginTop="30dp"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="false" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_male"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:background="@drawable/bg_rounded_corner_10"
            android:layout_marginEnd="54dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_male"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_male" />

            <TextView
                android:id="@+id/text_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/jaldi_bold"
                android:text="Male"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_female"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:background="@drawable/bg_rounded_corner_10"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_female"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_female" />

            <TextView
                android:id="@+id/text_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/jaldi_bold"
                android:text="Female"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_go_to_sign_in_information"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_blue_dot">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right_solid_white" />
    </LinearLayout>
</LinearLayout>