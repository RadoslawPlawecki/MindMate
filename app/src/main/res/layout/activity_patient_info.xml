<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".patient.CaregiverInfoActivity">

    <include
        layout="@layout/common_top_bar_caregiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_your_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jaldi_bold"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:text="Patient info"
        android:textSize="32sp" />

    <LinearLayout
        android:id="@+id/linear_layout_patient_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="20dp">

        <!-- Row for Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/LabelStyle"
                android:text="Name:" />

            <TextView
                android:id="@+id/text_patient_name"
                style="@style/ValueStyle"
                android:text="Caregiver's name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/LabelStyle"
                android:text="Gender:" />

            <TextView
                android:id="@+id/text_patient_gender"
                style="@style/ValueStyle"
                android:text="Caregiver's gender" />
        </LinearLayout>

        <!-- Row for Age -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/LabelStyle"
                android:text="Age:" />

            <TextView
                android:id="@+id/text_patient_age"
                style="@style/ValueStyle"
                android:text="Caregiver's age" />
        </LinearLayout>

        <!-- Row for Email -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/LabelStyle"
                android:text="Email:" />

            <TextView
                android:id="@+id/text_patient_email"
                style="@style/ValueStyle"
                android:text="Caregiver's email" />
        </LinearLayout>

        <!-- Row for Last login date -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/LabelStyle"
                android:text="Last login:" />

            <TextView
                android:id="@+id/text_patient_lld"
                style="@style/ValueStyle"
                android:text="Caregiver's last login" />
        </LinearLayout>
    </LinearLayout>


    <include
        layout="@layout/common_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"/>
</LinearLayout>