<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".caregiver.CaregiverDashboardActivity">

    <include
        layout="@layout/common_top_bar_caregiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include
        layout="@layout/common_loading_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/hello_ll"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:background="@drawable/bg_white_rectangle" >

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaldi_bold"
            android:text="@string/hello_xyz"
            android:textSize="24sp"
            android:layout_marginStart="30dp" />

        <TextView
            android:id="@+id/days_of_use"
            android:layout_width="249dp"
            android:layout_height="62dp"
            android:layout_marginStart="30dp"
            android:lineSpacingMultiplier="0.8"
            android:text="@string/you_ve_been_using_mindmate_for_x_days_in_a_row"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/patients_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/bg_white_rectangle_with_stroke" >

        <TextView
            android:id="@+id/txt_your_caregiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaldi_bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="YOUR PATIENTS"
            android:letterSpacing="0.08"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp" />

    </LinearLayout>
</LinearLayout>